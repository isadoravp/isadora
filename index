<script>
/* ------------ AO CLICAR NA P√ÅGINA 1, ABRE A P√ÅGINA 2 ------------- */
document.getElementById("page1").onclick = function () {
    document.getElementById("page1").style.opacity = "0";
    setTimeout(() => {
        document.getElementById("page1").style.display = "none";
        document.getElementById("page2").classList.add("active");
        document.getElementById("music").play();
    }, 800);
};

/* ---------------- ESTRELAS SUBINDO NA P√ÅGINA 2 ---------------- */
function createStars() {
    const container = document.getElementById("star-container");

    for (let i = 0; i < 45; i++) {
        let s = document.createElement("div");
        s.classList.add("starFloat");
        s.style.left = Math.random() * 100 + "%";
        s.style.animationDuration = 3 + Math.random() * 4 + "s";
        s.style.opacity = Math.random();
        container.appendChild(s);
    }
}
createStars();

/* --------------- LISTA DE PRESENTES ---------------- */
function toggleGifts() {
    alert("üíù Lista de presentes ser√° adicionada aqui.");
}
</script>

